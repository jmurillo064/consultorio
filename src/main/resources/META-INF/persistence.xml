<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.2" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence           http://xmlns.jcp.org/xml/ns/persistence/persistence_2_2.xsd">
  <persistence-unit name="ConsultorioOdontologico_PU" transaction-type="RESOURCE_LOCAL">
    <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
    <class>com.consultorio.odontologico.logica.Horario</class>
    <class>com.consultorio.odontologico.logica.Odontologo</class>
    <class>com.consultorio.odontologico.logica.Paciente</class>
    <class>com.consultorio.odontologico.logica.Persona</class>
    <class>com.consultorio.odontologico.logica.Responsable</class>
    <class>com.consultorio.odontologico.logica.Secretario</class>
    <class>com.consultorio.odontologico.logica.Turno</class>
    <class>com.consultorio.odontologico.logica.Usuario</class>
    <exclude-unlisted-classes>false</exclude-unlisted-classes>
    <properties>
      <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/clinica_odontologica?serverTimezone=UTC"/>
      <property name="javax.persistence.jdbc.user" value="root"/>
      <property name="javax.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>
      <property name="javax.persistence.jdbc.password" value="root"/>
      <property name="javax.persistence.schema-generation.database.action" value="create"/>
    </properties>
  </persistence-unit>
</persistence>
